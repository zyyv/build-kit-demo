{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "cli-demo/*": ["./packages/cli-demo/src/index"],
      "tsup-demo/*": ["./packages/tsup-demo/src/index"],
      "vite-demo/*": ["./packages/vite-demo/src/index"],
      "unbuild-demo/*": ["./packages/unbuild-demo/src/index"]
    },
    "resolveJsonModule": true,
    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "eslint.config.js",
    "**/bin/**"
  ]
}
